{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "permissions": {
        "allow": [
            "Bash(npm run *)",
            "Bash(uv run *)",
            "Bash(git *)",
            "Bash(npx *)"
        ],
        "deny": [
            "Bash(curl *)",
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./secrets/**)"
        ]
    }
}